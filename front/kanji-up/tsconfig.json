{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
		"jsx": "react-native",
		"allowJs": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"noEmit": true,
		"esModuleInterop": true,
		"lib": ["DOM", "ESNext"],
    "types": ["./src/types"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
		"resolveJsonModule": true,
		"target": "ESNext"
  }
}

{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    // "types": ["./packages/types", "jest", "reflect-metadata"],
    // "typeRoots": ["./src/types", "./node_modules/@types"],
    // "typeRoots": ["../../node_modules/kanji-app-types", "../../node_modules/@types"],
    "resolveJsonModule": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules", "dist"]
}
